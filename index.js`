require('dotenv').config();nconst express=require('express'); const cors=require('cors'); const app=express(); const PORT=process.env.PORT||3000; app.use(cors()); app.use(express.json()); app.get('/',(req,res)=>res.send('Hello Express!')); app.get('/api/health',(req,res)=>res.json({ ok: true })); app.post('/api/echo',(req,res)=>res.json({ youSent: req.body })); app.listen(PORT,()=>console.log('Server running on http://localhost:'+PORT));

